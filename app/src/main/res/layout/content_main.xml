<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.axel_.controladordifuso_propensionvictimas.MainActivity"
    tools:showIn="@layout/activity_main"
    android:layout_marginTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Usas redes sociales para conocer nuevas personas?"
        android:id="@+id/pregunta1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/respuesta1"
        android:orientation="horizontal"
        android:layout_below="@+id/pregunta1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <RadioButton

            android:id="@+id/respuesta1.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/respuesta1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Has salido con amig@s que conociste en las redes sociales?"
        android:id="@+id/pregunta2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/respuesta1"
        android:layout_centerVertical="true"
        android:textAlignment="center"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/respuesta2"
        android:orientation="horizontal"
        android:layout_below="@+id/pregunta2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <RadioButton

            android:id="@+id/respuesta2.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/respuesta2.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Conoces alguna aplicacion que sirva para grabar los videochats?"
        android:id="@+id/pregunta3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/respuesta2"
        android:layout_centerVertical="true"
        android:textAlignment="center"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/respuesta3"
        android:orientation="horizontal"
        android:layout_below="@+id/pregunta3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <RadioButton

            android:id="@+id/respuesta3.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/respuesta3.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"/>

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Conoces la forma de desactivas los servicios de localización de tu telefono para impedir que alguna  App los utilice?"
        android:id="@+id/pregunta4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/respuesta3"
        android:layout_centerVertical="true"
        android:textAlignment="center"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/respuesta4"
        android:orientation="horizontal"
        android:layout_below="@+id/pregunta4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <RadioButton

            android:id="@+id/respuesta4.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/respuesta4.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"/>


    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="¿Tienes fotos personales en tus redes sociales?"
        android:id="@+id/pregunta5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/respuesta4"
        android:textAlignment="center"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/respuesta5"
        android:orientation="horizontal"
        android:layout_below="@+id/pregunta5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <RadioButton

            android:id="@+id/respuesta5.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="si"
            android:layout_marginRight="10dp"/>
        <RadioButton
            android:id="@+id/respuesta5.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no"/>
    </RadioGroup>

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        android:id="@+id/buttonFinalizar"
        android:layout_below="@+id/respuesta5"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonFinalizarClick"/>

</RelativeLayout>
</ScrollView>